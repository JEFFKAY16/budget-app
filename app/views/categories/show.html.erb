<div class="cat-name-section">
  <div class="cat-name">
    <h5>Back</h5>
  </div>
  <div class="cat-name">
    <h5><%= @category.name %></h5>
  </div>
  <div class="cat-price">
    <h5 class="bold">$100.00</h5>
  </div>
</div>
<div class="cat-cards">
  <% @category.recent_payments.each do |payment| %>
      <div class="transaction-card-holder">
        <div class="transaction-info">
          <h4><%= payment.name %></h4>
          <div class="calender-section">
            <%= image_tag('calender.png', :alt => 'menu', :width => '20px', :height => '20px') %>
            <p class="time"><%= payment.created_at.to_date %> at <%= payment.created_at.strftime("%I:%M %P") %></p>
          </div>
        </div>
        <div class="transaction-info-placeholder">
          <p>Total Payment</p>
          <p class="bold">$<%= payment.amount %></p>
        </div>
      </div>
  <% end %>
</div>

<div class="add-new-cat">
  <%= link_to "Add Payment", new_category_payment_path(@category), class: 'new-category-link' %>
</div>